<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t t-name="kaz_account_tax_return_start_date.AccountReportFilterDate" t-inherit="account_reports.AccountReportFilterDate" t-inherit-mode="extension">
        <xpath expr="//t[@t-if=&quot;controller.options.date.mode === 'range'&quot;][1]/DropdownItem[last()]" position="after">
            <DropdownItem
                class="{ 'filter_date_range_tax_period_hook': true, 'selected': (controller.options.date.filter == 'tax_period') }"
                onSelected="() => this.updateFilter('date.filter', 'tax_period')"
            >
                Tax Period
            </DropdownItem>
            <DropdownItem
                class="{ 'filter_date_range_last_tax_period_hook': true, 'selected': (controller.options.date.filter == 'last_tax_period') }"
                onSelected="() => this.updateFilter('date.filter', 'last_tax_period')"
            >
                Last Tax Period
            </DropdownItem>
        </xpath>
    </t>
</templates>
